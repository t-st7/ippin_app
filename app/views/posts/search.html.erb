<main class="main">
  <div class="inner">
    <div class="card__wrapper">

      <%# 検索結果があった場合 %>
        <% if @results.length != 0 %>
          <% @results.each do |post| %>
          <div class="card" style="width: 280px;">
            <%= link_to image_tag(post.image, class: :card__img ), post_path(post.id)%>
            <div class="card__body">
              <%= link_to post.title, post_path(post.id), class: :card__title%>
              <p class="card__summary">
                <%= "" %>
              </p>
              <%= link_to post.cooking_time.name, post_path(post.id), class: :card__user %>
            </div>
          </div>
          <% end %>
        <%# // 検索結果があった場合 // %>
        <%# なかった場合 %>
        <% else %>
            <h3>検索した一品はございません。</h3>
            <%=link_to 'トップページへ戻る', root_path %>
        <% end %>
        <%# // なかった場合 //%>

    </div>
  </div>
</main>